@startuml
class Drawing{
+ drawPolygon(lines: LinkedHashSet<Line>) : void
- perimeter(p: Polygon) : double
+ main(args: String[]) : void
}

class Polygon{
- {static} classID : int
- objID : int
} 

class Line{
- {static} classID : int
- objID : int
+ Line(a: Point, b: Point)
+ distance() : double
+ toString() : String
}

class Point{
- x : int
- y : int
+ Point(x: int, y: int)
+ {static} distance(a: Point, b: Point) : double
+ toString() : String
}

Line *-- Point : has-a
Polygon *-- Line : has-a
Drawing --> Line : uses
Drawing --> Point : uses
Drawing --> Polygon : uses

@enduml